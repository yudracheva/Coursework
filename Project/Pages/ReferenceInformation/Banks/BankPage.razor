@page "/banks/{id:int}"
@page "/banks/new"
@inherits BankPageIndex

@if (isLoad)
{
    @if (bank != null)
    {
        <h3>Банк @GetDescription()</h3>

        <form>
            @if (bank.Id != 0)
            {
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Идентификатор: </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" value="@bank.Id">
                    </div>
                </div>
            }

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Наименование: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-sm" @bind="@bank.Name" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">БИК: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-sm" @bind="@bank.Bik" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Корреспондентский счёт: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-sm" @bind="@bank.CorrespondentAccount" />
                </div>
            </div>

            <button type="button" class="btn btn-info" @onclick="Save">Сохранить</button>
        </form>
    }
}
else
{
    <LoadComponent />
}