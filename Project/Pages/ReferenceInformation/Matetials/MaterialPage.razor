@page "/materials/{id:int}"
@page "/materials/new"
@inherits MaterialPageIndex

@if (isLoad)
{
    @if (material != null)
    {
        <h3>Материал @GetDescription()</h3>

        <form>
            @if (material.Id == 0)
            {
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Идентификатор: </label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" value="@material.Id">
                    </div>
                </div>
            }

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Наименование: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-sm" @bind="@material.Name" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Категория:</label>
                <div class="col-sm-10">
                    @*<select class="form-control form-control-sm" @bind="@matetial.Category">

                            <option se>Small select</option>
                        </select>*@
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Поставщик:</label>
                <div class="col-sm-10">
                    @*<select class="form-control form-control-sm" @bind="@matetial.Category">

                            <option se>Small select</option>
                        </select>*@
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Поставки прекращены: </label>
                <div class="col-sm-10">
                    <input type="checkbox" class="form-control form-control-sm" @bind="@material.DeliveriesStopped" />
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Описание: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-sm" @bind="@material.Description" />
                </div>
            </div>

            <button type="button" class="btn btn-info" @onclick="Save">Сохранить</button>
        </form>
    }
}
else
{
    <LoadComponent />
}