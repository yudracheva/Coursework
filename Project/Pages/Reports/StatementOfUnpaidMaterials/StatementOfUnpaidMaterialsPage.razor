@page "/statement-of-unpaid-materials"
@inherits ReportsComponent

<h3>Ведомость неоплаченных материалов</h3>


@if (isLoad)
{
    <div class="row" style="background-color: #0f4043;color: white;text-align: center;vertical-align: middle;">
        <div class="col">
            <div class="row">
                <div class="col-8 border">
                    Материал
                </div>
                <div class="col-2 border">
                    Количество
                </div>
                <div class="col-2 border">
                    Сумма
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col">
            @if (lines != null)
            {
                @foreach (var line in lines)
                {
                    <div class="row">
                        <div class="col-8 border">
                            @line.Material.Name
                        </div>
                        <div class="col-2 border">
                            @line.Count
                        </div>
                        <div class="col-2 border">
                            @line.Sum
                        </div>
                    </div>
                }
            }
        </div>
    </div>
}
else
{
    <LoadComponent />
}